MDScreen:
	name:"main"
	MDFloatLayout:
		md_bg_color:1,1,1,1
		Image:
			source:"logo.png"
			pos_hint:{"center_x":.48,"center_y":.65}
		MDLabel:
			text: "H E L L O"
			font_size:"23sp"
			pos_hint:{"center_y":.38}
			halign:"center"
			color:rgba(34,34,34,255)
		MDLabel:
			text: "Best place of the world and share your journey experience"
			font_size:"13sp"
			size_hint_x:.85
			pos_hint:{"center_x":.5,"center_y":.3}
			halign:"center"
			color:rgba(127,127,127,255)
		Button:
			text:"SE CONNECTER"
			size_hint:.66,.065
			pos_hint:{"center_x":.5,"center_y":.18}
			background_color:0,0,0,0
			on_release:
				root.manager.transition.direction="left"
				root.manager.current="signin"
			canvas.before:
				Color:
					rgb:rgba(52,0,231,255)
				RoundedRectangle:
					size: self.size
					pos:self.pos
					radius:[5]
		Button:
			text:"S'INSCRIRE"
			size_hint:.66,.065
			color:rgba(127,127,127,255)
			pos_hint:{"center_x":.5,"center_y":.10}
			background_color:0,0,0,0
			on_release:
				root.manager.transition.direction="left"
				root.manager.current="signup"
			canvas.before:
				Color:
					rgb:rgba(52,0,231,255)
				Line:
					width:1.2
					rounded_rectangle: self.x, self.y, self.width,self.height,5,5,5,5,100
					