MDScreen:
	name:"signin"
	MDFloatLayout:
		md_bg_color:1,1,1,1
		MDIconButton:
			icon:"arrow-left"
			pos_hint:{"center_y":.95}
			user_font_size:"30sp"
			theme_text_color:"Custom"
			text_color:rgba(26,24,58,255)
			on_release:
				root.manager.transition.direction="right"
				root.manager.current="main"
		MDLabel:
			text: "Welcome !"
			font_size:"26sp"
			pos_hint:{"center_x":.5,"center_y":.85}
			halign:"center"
			color:rgba(0,0,59,255)
		MDLabel:
			text: "Authentification"
			font_size:"18sp"
			pos_hint:{"center_x":.5,"center_y":.79}
			halign:"center"
			color:rgba(135,135,135,255)
		MDFloatLayout:
			size_hint:.7,.07
			pos_hint:{"center_x":.48,"center_y":.65}
			TextInput:
				hint_text: "Email"
				size_hint_y:.75
				font_size:"14sp"
				pos_hint:{"center_x":.43,"center_y":.5}
				background_color:1,1,1,0
				foreground_color:rgba(0,0,59,255)
				cursor_color:rgba(0,0,59,255)
				cursor_width:"2sp"
				multiline:False
			MDFloatLayout:
				pos_hint:{"center_x":.45,"center_y":0}
				size_hint_y:.03
				md_bg_color:rgba(178,178,178,255)

		MDFloatLayout:
			size_hint:.7,.07
			pos_hint:{"center_x":.48,"center_y":.5}
			TextInput:
				hint_text: "Password"
				size_hint_y:.75
				font_size:"14sp"
				pos_hint:{"center_x":.43,"center_y":.5}
				background_color:1,1,1,0
				foreground_color:rgba(0,0,59,255)
				cursor_color:rgba(0,0,59,255)
				cursor_width:"2sp"
				multiline:False
				password:True
			MDFloatLayout:
				pos_hint:{"center_x":.45,"center_y":0}
				size_hint_y:.03
				md_bg_color:rgba(178,178,178,255)

		Button:
			text:"LOGIN"
			size_hint:.66,.065
			pos_hint:{"center_x":.5,"center_y":.34}
			background_color:0,0,0,0
			on_release:
				root.manager.transition.direction="left"
				root.manager.current="signin"
			canvas.before:
				Color:
					rgb:rgba(52,0,231,255)
				RoundedRectangle:
					size: self.size
					pos:self.pos
					radius:[5]

		MDTextButton:
			text:"Mot de passe oubli√©"
			pos_hint:{"center_x":.5,"center_y":.26}
			color:rgba(68,78,132,255)
			font_size:"12sp"

		MDLabel:
			text:"or"
			color:rgba(52,0,231,255)
			pos_hint:{"center_y":.22}
			font_size:"13sp"
			halign:"center"

		MDFloatLayout:
			md_bg_color:rgba(178,178,178,255)
			pos_hint:{"center_x":.3,"center_y":.218}
			size_hint:.3,.002
		MDFloatLayout:
			md_bg_color:rgba(178,178,178,255)
			pos_hint:{"center_x":.7,"center_y":.218}
			size_hint:.3,.002

		MDLabel:
			text:"Social Media Login"
			color:rgba(135,135,193,255)
			pos_hint:{"center_y":.16}
			font_size:"13sp"
			halign:"center"

		MDGridLayout:
			cols:3
			size_hint:.48,.07
			pos_hint:{"center_x":.5,"center_y":.1}
			Image:
				source:"google.jpeg"
			Image:
				source:"facebook.png"
			Image:
				source:"apple.png"

		MDLabel:
			text:"Don't have an account ?"
			color:rgba(135,135,193,255)
			pos_hint:{"center_x":.58,"center_y":.04}
			font_size:"11sp"
			halign:"center"

		MDTextButton:
			text:"Sign up"
			pos_hint:{"center_x":.75,"center_y":.04}
			color:rgba(135,133,193,255)
			font_size:"11sp"
			on_release:
				root.manager.transition.direction = "left"
				root.manager.current = "signup"
